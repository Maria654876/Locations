<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E5E5E5"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="545.07px"
        android:layout_height="154.73px"
        android:layout_marginStart="-17px"
        android:layout_marginTop="120px"
        android:src="@drawable/img"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="455.27px"
        android:layout_height="146.84px"
        android:layout_marginTop="11dp"
        android:src="@drawable/img_1"
        app:layout_constraintEnd_toEndOf="@+id/imageView"
        app:layout_constraintTop_toTopOf="@+id/imageView" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="460dp"
        android:layout_height="49dp"
        android:layout_marginStart="11dp"
        android:fontFamily="@font/oswald_light"
        android:text="ЛОКАЦИИ"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="@+id/imageView2"
        app:layout_constraintTop_toTopOf="@+id/imageView"></TextView>


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/location"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="410dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="19dp"
        android:layout_marginTop="160dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="44dp"
        android:background="@drawable/shape"
        app:layout_constraintBottom_toTopOf="@+id/recyclerView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape" />
    </com.google.android.material.textfield.TextInputLayout>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        class="androidx.appcompat.app.AlertController$RecycleListView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="266dp"
        android:layout_marginBottom="115dp"
        android:background="@drawable/shape"
        app:layout_constraintBottom_toTopOf="@+id/imageView3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </androidx.recyclerview.widget.RecyclerView>


    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/navigation"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_gravity="bottom"
        android:background="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent">


        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="15dp"
            android:src="@drawable/img_2" />

        <ImageView
            android:layout_width="45dp"
            android:layout_height="27dp"
            android:layout_marginStart="121dp"
            android:layout_marginTop="15dp"
            android:src="@drawable/img_3" />

        <ImageView
            android:layout_width="45dp"
            android:layout_height="27dp"
            android:layout_marginStart="114dp"
            android:layout_marginTop="30dp"
            android:src="@drawable/img_4" />

        <ImageView
            android:layout_width="15dp"
            android:layout_height="23dp"
            android:layout_marginStart="133dp"
            android:layout_marginTop="24dp"
            android:src="@drawable/img_5" />

        <ImageView
            android:layout_width="4dp"
            android:layout_height="5dp"
            android:layout_marginStart="138dp"
            android:layout_marginTop="21dp"
            android:src="@drawable/img_6" />

        <ImageView
            android:layout_width="4dp"
            android:layout_height="5dp"
            android:layout_marginStart="138dp"
            android:layout_marginTop="45dp"
            android:src="@drawable/img_7" />

        <ImageView
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_marginStart="260dp"
            android:layout_marginTop="40dp"
            android:src="@drawable/img_11" />

        <ImageView
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_marginStart="260dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/img_11" />

        <ImageView
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_marginStart="280dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/img_11" />

        <ImageView
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_marginStart="280dp"
            android:layout_marginTop="40dp"
            android:src="@drawable/img_11" />

        <ImageView
            android:layout_width="32dp"
            android:layout_height="50dp"
            android:src="@drawable/vector"
            android:layout_marginStart="350dp"
            android:layout_marginTop="15dp"
            />


    </com.google.android.material.bottomnavigation.BottomNavigationView>

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="100dp"
        android:layout_height="0dp"
        android:layout_marginBottom="-20dp"
        android:src="@drawable/img_8"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/recyclerView" />

    <ImageView
        android:layout_width="30dp"
        android:layout_height="35dp"
        android:src="@drawable/img_9"
        app:layout_constraintBottom_toTopOf="@+id/navigation"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.532"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>